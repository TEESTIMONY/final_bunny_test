{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "redirects": [
    { "source": "/", "destination": "/auth.html" },
    { "source": "/index", "destination": "/auth.html" }
  ],
  "trailingSlash": false
} 