{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/:path", "destination": "/:path.html" }
  ],
  "redirects": [
    { "source": "^/$", "destination": "/auth", "permanent": false },
    { "source": "/index", "destination": "/auth", "permanent": false }
  ]
} 