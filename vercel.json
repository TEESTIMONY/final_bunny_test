{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/:path", "destination": "/:path.html" }
  ],
  "redirects": [
    { "source": "/index", "destination": "/" },
    { "source": "/", "destination": "/auth" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
} 